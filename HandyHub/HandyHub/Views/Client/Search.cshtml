@using HandyHub.Models.Entities
@model List<Worker>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
        </tr>
    </thead>
    <tbody>

      
        @foreach (var item in Model)
        {
           
            <tr>
              
                <td>

                   @item.User.Name
                     <a asp-action="WorkerProfile" asp-route-id="@item.Id" class="btn btn-primary">Profile</a>

