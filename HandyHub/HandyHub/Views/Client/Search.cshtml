@model IEnumerable<HandyHub.Models.Entities.Worker>
@{
    ViewData["Title"] = "HandyHub - ابحث عن العمّال المهرة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8 text-right">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">ابحث عن العمّال المهرة</h1>
        <p class="text-gray-600">تصفح وتواصل مع العمّال الموثوقين في منطقتك</p>
    </div>

    <form method="get" asp-action="Search" class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- 🟣 الفلاتر -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-sm p-6 sticky top-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">الفلاتر</h2>

                <!-- الفئة -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">الفئة</label>
                    <select name="categoryId"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent cursor-pointer pr-8">
                        <option value="">كل الفئات</option>
                        @foreach (var category in ViewBag.caregories as List<HandyHub.Models.Entities.Category>)
                        {
                            if (Context.Request.Query["categoryId"] == category.Id.ToString())
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div>

                <!-- المدينة -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">المدينة</label>
                    <input name="city" placeholder="أدخل اسم المدينة"
                           value="@Context.Request.Query["city"]"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                           type="text" />
                </div>

                <!-- التقييم -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">الحد الأدنى للتقييم</label>
                    <select name="rating"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent cursor-pointer pr-8">
                        <option value="">أي تقييم</option>

                        @if (Context.Request.Query["rating"] == "3")
                        {
                            <option value="3" selected>3+ نجوم</option>
                        }
                        else
                        {
                            <option value="3">3+ نجوم</option>
                        }

                        @if (Context.Request.Query["rating"] == "4")
                        {
                            <option value="4" selected>4+ نجوم</option>
                        }
                        else
                        {
                            <option value="4">4+ نجوم</option>
                        }

                        @if (Context.Request.Query["rating"] == "4.5")
                        {
                            <option value="4.5" selected>4.5+ نجوم</option>
                        }
                        else
                        {
                            <option value="4.5">4.5+ نجوم</option>
                        }
                    </select>
                </div>

                <!-- متاح الآن -->
                <div class="mb-6">
                    <label class="flex items-center space-x-2 space-x-reverse cursor-pointer">
                        <input name="available"
                               type="checkbox"
                               class="w-5 h-5 text-teal-600 border-gray-300 rounded focus:ring-teal-500 cursor-pointer"
                               value="true"
                               @(Context.Request.Query["available"] == "true" ? "checked" : "") />
                        <span class="text-sm text-gray-700">متاح الآن</span>
                    </label>
                </div>

                <button type="submit" class="mt-4 w-full py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-medium">
                    <i class="ri-search-line ml-1"></i> تطبيق الفلاتر
                </button>
            </div>
        </div>

        <!-- 🟡 نتائج العمّال -->
        <div class="lg:col-span-3">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @if (Model.Any())
                {
                    @foreach (var worker in Model)
                    {
                        var avgRating = worker.Reviews?.Any() == true ? worker.Reviews.Average(r => r.Rating) : 0;
                        var city = worker.User?.City ?? "-";
                        var name = worker.User?.Name ?? "عامل مجهول";
                        var category = worker.Category?.Name ?? "بدون فئة";
                        var phone = worker.User?.Phone ?? "--";
                        var image = worker.User?.ImageUrl ?? "/images/default-worker.png";

                        <a asp-action="WorkerProfile" asp-route-id="@worker.Id"
                           class="block bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden worker-card">
                            <div class="p-6 text-right">
                                <div class="flex items-start justify-between mb-4">
                                    <div class="flex-1">
                                        <div class="flex items-center justify-end space-x-2 space-x-reverse mb-2">
                                            <h3 class="text-lg font-semibold text-gray-900">@name</h3>
                                            @if (worker.IsAvailable)
                                            {
                                                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full whitespace-nowrap">متاح</span>
                                            }
                                            else
                                            {
                                                <span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full whitespace-nowrap">غير متاح</span>
                                            }
                                        </div>
                                        <p class="text-sm text-teal-600 font-medium">@category</p>
                                    </div>
                                </div>

                                <div class="flex justify-end items-center mb-3">
                                    <div class="flex items-center space-x-1 space-x-reverse">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < Math.Round(avgRating))
                                            {
                                                <i class="ri-star-fill text-yellow-400 text-sm"></i>
                                            }
                                            else
                                            {
                                                <i class="ri-star-line text-gray-300 text-sm"></i>
                                            }
                                        }
                                        <span class="text-sm text-gray-600 mr-2">@avgRating.ToString("0.0")</span>
                                    </div>
                                </div>

                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">@worker.Bio</p>

                                <div class="flex justify-between pt-4 border-t border-gray-100 text-sm text-gray-500">
                                    <div class="flex items-center space-x-1 space-x-reverse">
                                        <i class="ri-map-pin-line"></i><span>@city</span>
                                    </div>
                                    <div class="flex items-center space-x-1 space-x-reverse">
                                        <i class="ri-phone-line"></i><span>@phone</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                }
                else
                {
                    <p class="text-gray-500 text-center col-span-2">لم يتم العثور على أي عمّال يطابقون معايير البحث.</p>
                }
            </div>
        </div>
    </form>
</div>


<script>
    document.querySelector('input[name="available"]').addEventListener('change', function() {
        this.form.submit(); // يرسل الفورم فوري لما تعمل check
    });
</script>