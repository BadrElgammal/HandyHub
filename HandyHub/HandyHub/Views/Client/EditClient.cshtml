@model HandyHub.Models.Entities.Client

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعديل بيانات العميل";
}
<div class="min-h-screen bg-gray-50 py-12 text-right" dir="rtl">

@if (ViewBag.errorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.errorMessage
    </div>
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="container py-5">
    <h3 class="fw-bold mb-4 text-warning">تعديل بيانات العميل</h3>

    <form asp-action="EditClient" method="post" class="bg-white p-4 shadow rounded-3">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label class="form-label">الاسم</label>
            <input asp-for="User.Name" class="form-control" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">البريد الإلكتروني</label>
            <input asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">رقم الهاتف</label>
            <input asp-for="User.Phone" class="form-control" />
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">المدينة</label>
            <input asp-for="User.City" class="form-control" />
            <span asp-validation-for="User.City" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">كلمة المرور</label>
            <input asp-for="User.PasswordHash" class="form-control" type="password" />
            <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning text-white">تحديث</button>
        <a asp-action="ManageClients" class="btn btn-secondary">رجوع</a>
    </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
