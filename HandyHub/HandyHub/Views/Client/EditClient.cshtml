@model HandyHub.Models.ViewModels.ClientVM.EditClientVM
@{
    ViewData["Title"] = "تعديل بياناتي | HandyHub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="min-h-screen bg-gray-50 py-12 text-right" dir="rtl">

    <main class="max-w-3xl mx-auto bg-white rounded-2xl shadow-xl p-8 lg:p-10 border border-gray-100">
        <h1 class="text-3xl font-bold text-gray-900 mb-2 flex items-center gap-2">
            <i class="ri-user-settings-line text-teal-600"></i> تعديل بياناتي الشخصية
        </h1>
        <p class="text-gray-600 mb-8 border-b pb-4">يرجى تحديث بيانات حسابك لتبقى دقيقة.</p>

        <form asp-action="EditClient" method="post" class="space-y-6">

            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.UserId" />

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الاسم الكامل</label>
                <input asp-for="@Model.Name"
                       class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 text-sm" />
                <span asp-validation-for="@Model.Name" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">البريد الإلكتروني</label>
                <input asp-for="@Model.Email"
                       class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 text-sm" />
                <span asp-validation-for="@Model.Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">رقم الهاتف</label>
                <input asp-for="@Model.Phone"
                       class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 text-sm" />
                <span asp-validation-for="@Model.Phone" class="text-red-600 text-sm"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">المدينة</label>
                    <input asp-for="@Model.City"
                           class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 text-sm" />
                </div>

               
            </div>

            

            <div class="border-t border-gray-100 pt-6">
                <h3 class="text-lg font-bold text-gray-800 mb-4">تغيير كلمة المرور (اختياري)</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">كلمة المرور الجديدة</label>
                        <input asp-for="@Model.Password" type="password"
                               class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 text-sm">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">تأكيد كلمة المرور</label>
                        <input asp-for="@Model.ConfirmPassword" type="password"
                               class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 text-sm">
                    </div>
                </div>
            </div>

            <div class="flex justify-between items-center pt-8">
                <a href="@Url.Action("Profile", "Worker")"
                   class="text-gray-600 hover:text-teal-600 font-medium flex items-center transition-colors">
                    <i class="ri-arrow-go-back-line ml-1"></i> إلغاء والرجوع
                </a>

                <button type="submit"
                        class="px-8 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-semibold flex items-center transition-colors shadow-lg shadow-teal-500/30">
                    <i class="ri-save-line ml-1"></i> حفظ التعديلات
                </button>
            </div>

        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
