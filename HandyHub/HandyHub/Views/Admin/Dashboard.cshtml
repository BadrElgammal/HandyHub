@using HandyHub.Models.ViewModels
@model AdminDashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "لوحة التحكم";
}

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4">
            <i class="fas fa-crown text-warning me-2"></i> لوحة تحكم المدير
        </h2>

        <!-- Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card text-center shadow border-0 rounded-4 p-4">
                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                    <h5>@Model.TotalClients</h5>
                    <p class="text-muted small">عدد العملاء</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center shadow border-0 rounded-4 p-4">
                    <i class="fas fa-hard-hat fa-2x text-success mb-2"></i>
                    <h5>@Model.TotalWorkers</h5>
                    <p class="text-muted small">عدد العمال</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center shadow border-0 rounded-4 p-4">
                    <i class="fas fa-tags fa-2x text-warning mb-2"></i>
                    <h5>@Model.TotalCategories</h5>
                    <p class="text-muted small">عدد الفئات</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center shadow border-0 rounded-4 p-4">
                    <i class="fas fa-star fa-2x text-danger mb-2"></i>
                    <h5>@Model.TotalReviews</h5>
                    <p class="text-muted small">عدد التقييمات</p>
                </div>
            </div>
        </div>

        <!-- Recent lists -->
        <div class="row g-4">
            <!-- أحدث العملاء -->
            <div class="col-md-6">
                <div class="card border-0 shadow rounded-4">
                    <div class="card-header bg-primary text-white fw-bold rounded-top-4">
                        <i class="fas fa-users me-2"></i> أحدث العملاء
                    </div>

                    <ul class="list-group list-group-flush">
                        @foreach (var c in Model.RecentClients)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@c.User?.Name</span>
                                <small class="text-muted">@c.CreatedAt.ToShortDateString()</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- أحدث العمال -->
            <div class="col-md-6">
                <div class="card border-0 shadow rounded-4">
                    <div class="card-header bg-success text-white fw-bold rounded-top-4">
                        <i class="fas fa-hard-hat me-2"></i> أحدث العمال
                    </div>

                    <ul class="list-group list-group-flush">
                        @foreach (var w in Model.RecentWorkers)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@w.User?.Name</span>
                                <small class="text-muted">@w.CreatedAt.ToShortDateString()</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>