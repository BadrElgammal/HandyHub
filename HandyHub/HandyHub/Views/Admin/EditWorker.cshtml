@model HandyHub.Models.ViewModels.WorkerVM.EditWorkerVM

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعديل بيانات العامل";
}



<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="container py-5">
    <h3 class="fw-bold mb-4 text-warning">تعديل بيانات العامل</h3>

    <form asp-action="EditWorker" method="post" class="bg-white p-4 shadow rounded-3" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="UserId" type="hidden" />
        <!-- تعديل الصورة -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">الصورة الشخصية</label>

            <div class="flex items-center gap-4">

                <!-- تم إضافة id="avatarPreview" -->
                <img id="avatarPreview"
                     src="~/ProfileImages/@(string.IsNullOrEmpty(Model.ExistingProfileImagePath) ? "default-avatar-admin.png" : Model.ExistingProfileImagePath)"
                     alt="Profile"
                     class="w-20 h-20 rounded-full border object-cover" />

                <!-- تم إضافة id="profileImageInput" -->
                <input asp-for="@Model.ProfileImage"
                       id="profileImageInput"
                       type="file"
                       accept="image/*"
                       class="text-sm text-gray-700" />
            </div>

            <span asp-validation-for="@Model.ProfileImage" class="text-red-600 text-sm"></span>
        </div>
        <!-- بيانات المستخدم العامة -->
        <div class="mb-3">
            <label class="form-label">الاسم</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">البريد الإلكتروني</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">رقم الهاتف</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">المدينة</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <!-- بيانات خاصة بالعامل -->
        <div class="mb-3">
            <label class="form-label">المنطقة</label>
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">نبذة عنك</label>
            <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">الفئة</label>
            <select class="form-select" asp-for="CategoryId">
                <option value="">-- اختر الفئة --</option>
                @foreach (var item in Model.Categorys)
                {
                    <option value="@item.Id" selected="@(item.Id == Model.CategoryId)">
                        @item.Name
                    </option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- كلمة المرور -->
        <div class="mb-3">
            <label class="form-label">كلمة المرور الجديدة (اتركها فارغة إن لم ترغب في التغيير)</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">تأكيد كلمة المرور</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning text-white">تحديث</button>
        <a asp-action="ManageWorkers" class="btn btn-secondary">رجوع</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- عرض الصورة مباشرة بعد اختيارها -->
    <script>
        document.getElementById('profileImageInput').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('avatarPreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}