@model HandyHub.Models.Entities.Client

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إضافة عميل جديد";
}

@if (ViewBag.errorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.errorMessage
    </div>
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="container py-5">
    <h3 class="fw-bold mb-4 text-primary">إضافة عميل جديد</h3>

    <form asp-action="CreateClient" method="post" class="bg-white p-4 shadow rounded-3">
        <div class="mb-3">
            <label class="form-label">الاسم</label>
            <input asp-for="User.Name" class="form-control" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">البريد الإلكتروني</label>
            <input asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">رقم الهاتف</label>
            <input asp-for="User.Phone" class="form-control" />
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">المدينة</label>
            <input asp-for="User.City" class="form-control" />
            <span asp-validation-for="User.City" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">كلمة المرور</label>
            <input asp-for="User.PasswordHash" class="form-control" type="password" />
            <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">حفظ</button>
        <a asp-action="ManageClients" class="btn btn-secondary">رجوع</a>
    </form>
</div>