@using HandyHub.Models.Entities
@model IEnumerable<Client>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إدارة العملاء";
}

@if (ViewBag.errorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.errorMessage
    </div>
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<section class="py-5 bg-light">
    <div class="container">

        <!-- العنوان + زر الإضافة -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
            <h2 class="fw-bold m-0 d-flex align-items-center">
                <i class="fas fa-users text-primary me-2"></i> إدارة العملاء
            </h2>
            <a asp-action="CreateClient" class="btn btn-primary rounded-3 w-100 w-md-auto">
                <i class="fas fa-plus-circle"></i> إضافة عميل جديد
            </a>
        </div>

        <!-- كارد يحتوي على الجدول -->
        <div class="card shadow border-0 rounded-4 overflow-hidden">

            <!-- Responsive Table -->
            <div class="table-responsive">
                <table class="table table-hover mb-0 text-center align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th style="min-width:120px;">الاسم</th>
                            <th style="min-width:160px;">البريد الإلكتروني</th>
                            <th style="min-width:100px;">المدينة</th>
                            <th style="min-width:120px;">تاريخ التسجيل</th>
                            <th style="min-width:130px;">إجراءات</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-muted py-4">
                                    لا يوجد عملاء حالياً
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var client in Model)
                            {
                                <tr>
                                    <td>@client.User?.Name</td>
                                    <td>@client.User?.Email</td>
                                    <td>@client.User?.City</td>
                                    <td>@client.CreatedAt.ToShortDateString()</td>
                                    <td>

                                        <!-- تفاصيل -->
                                        <a asp-action="ClientDetails"
                                           asp-route-id="@client.Id"
                                           class="btn btn-sm btn-info text-white rounded-3 me-1 mb-1"
                                           title="تفاصيل العميل">
                                            <i class="fas fa-info-circle"></i>
                                        </a>

                                        <!-- تعديل -->
                                        <a asp-action="EditClient"
                                           asp-route-id="@client.Id"
                                           class="btn btn-sm btn-warning text-white rounded-3 me-1 mb-1"
                                           title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <!-- حذف -->
                                        <form asp-action="DeleteClient"
                                              method="post"
                                              onsubmit="return confirm('هل أنت متأكد من حذف هذا العميل؟');"
                                              class="d-inline-block">
                                            <input type="hidden" name="id" value="@client.Id" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger rounded-3 mb-1"
                                                    title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
