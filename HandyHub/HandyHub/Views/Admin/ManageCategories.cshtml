@using HandyHub.Models.Entities
@model IEnumerable<Category>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إدارة الفئات";
}

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4"><i class="fas fa-tags text-info me-2"></i> إدارة الفئات</h2>

        <form asp-action="AddCategory" method="post" class="p-4 bg-light rounded-4 shadow mb-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="Name" class="form-control" placeholder="اسم الفئة" required />
                </div>
                <div class="col-md-6">
                    <input type="text" name="Description" class="form-control" placeholder="الوصف" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="fas fa-plus"></i> إضافة
                    </button>
                </div>
            </div>
        </form>

        <div class="card shadow border-0 rounded-4">
            <table class="table table-hover mb-0">
                <thead class="bg-info text-white">
                    <tr>
                        <th>الاسم</th>
                        <th>الوصف</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td>@cat.Name</td>
                            <td>@cat.Description</td>
                            <td>
                                <form asp-action="DeleteCategory" method="post">
                                    <input type="hidden" name="id" value="@cat.Id" />
                                    <button class="btn btn-sm btn-danger rounded-3"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>