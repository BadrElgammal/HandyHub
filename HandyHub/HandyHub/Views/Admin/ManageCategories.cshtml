@using HandyHub.Models.Entities
@model IEnumerable<Category>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إدارة الفئات";
}

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 d-flex align-items-center">
            <i class="fas fa-tags text-info me-2"></i> إدارة الفئات
        </h2>

        <!-- إضافة فئة جديدة -->
        <form asp-action="AddCategory" method="post" class="p-4 bg-light rounded-4 shadow mb-4">
            <div class="row g-3">

                <!-- اسم الفئة -->
                <div class="col-12 col-md-4">
                    <input type="text" name="Name" class="form-control" placeholder="اسم الفئة" required />
                </div>

                <!-- الوصف -->
                <div class="col-12 col-md-6">
                    <input type="text" name="Description" class="form-control" placeholder="الوصف" />
                </div>

                <!-- زر الإضافة -->
                <div class="col-12 col-md-2 d-grid">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-plus"></i> إضافة
                    </button>
                </div>
            </div>
        </form>

        <!-- عرض الفئات -->
        <div class="card shadow border-0 rounded-4 overflow-hidden">

            <!-- جدول Responsive -->
            <div class="table-responsive">
                <table class="table table-hover mb-0 text-center align-middle">
                    <thead class="bg-info text-white">
                        <tr>
                            <th style="min-width: 160px;">الاسم</th>
                            <th style="min-width: 200px;">الوصف</th>
                            <th style="min-width: 120px;">الإجراءات</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-muted py-4">
                                    لا توجد فئات مسجلة حاليًا.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var cat in Model)
                            {
                                <tr>
                                    <td>@cat.Name</td>
                                    <td>@cat.Description</td>
                                    <td>
                                        <form asp-action="DeleteCategory" method="post"
                                              onsubmit="return confirm('هل أنت متأكد من حذف هذه الفئة؟');">

                                            <input type="hidden" name="id" value="@cat.Id" />

                                            <button type="submit" class="btn btn-sm btn-danger rounded-3">
                                                <i class="fas fa-trash"></i> حذف
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>
