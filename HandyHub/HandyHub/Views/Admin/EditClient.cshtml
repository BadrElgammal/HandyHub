@model HandyHub.Models.ViewModels.ClientVM.EditClientVM

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعديل بيانات العميل";
}

@if (ViewBag.errorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.errorMessage
    </div>
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["msg"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="container py-5" dir="rtl">

    <h3 class="fw-bold mb-4 text-warning text-center text-md-start">
        تعديل بيانات العميل
    </h3>

    <form asp-action="EditClient" method="post" class="bg-white p-4 shadow rounded-3">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />

        <div class="row g-4">

            <div class="col-12 col-md-6">
                <label class="form-label">الاسم</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">البريد الإلكتروني</label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">رقم الهاتف</label>
                <input asp-for="@Model.Phone" class="form-control" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">المدينة</label>
                <input asp-for="@Model.City" class="form-control" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">كلمة المرور الجديدة (اختياري)</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">تأكيد كلمة المرور</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning text-white px-4">تحديث</button>
            <a asp-action="ManageClients" class="btn btn-secondary px-4">رجوع</a>
        </div>

    </form>
</div>
