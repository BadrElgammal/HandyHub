@* ===========================
   ✅ Page Header Banner
   =========================== *@
<div class="page-header-banner">
    <i class="fas fa-chart-line page-header-icon"></i>
    <div class="page-header-content">
        <div class="page-header-info">
            <h1>
                <i class="fas fa-chart-pie me-2"></i>
                التقارير والإحصاءات
            </h1>
            <p>نظرة شاملة على أداء النظام وإحصائيات المستخدمين</p>
        </div>
        <button class="btn-print" onclick="window.print()">
            <i class="fas fa-print"></i>
            طباعة التقرير
        </button>
    </div>
</div>

@* ===========================
   ✅ Main Stats Cards
   =========================== *@
<div class="stats-grid">
    <div class="stat-card card-clients">
        <div class="stat-card-content">
            <div class="stat-card-icon">
                <i class="fas fa-users"></i>
            </div>
            <h3>@Model.TotalClients</h3>
            <p>إجمالي العملاء</p>
        </div>
        <i class="fas fa-users stat-card-bg-icon"></i>
    </div>

    <div class="stat-card card-workers">
        <div class="stat-card-content">
            <div class="stat-card-icon">
                <i class="fas fa-hard-hat"></i>
            </div>
            <h3>@Model.TotalWorkers</h3>
            <p>إجمالي العمال</p>
        </div>
        <i class="fas fa-hard-hat stat-card-bg-icon"></i>
    </div>

    <div class="stat-card card-reviews">
        <div class="stat-card-content">
            <div class="stat-card-icon">
                <i class="fas fa-comments"></i>
            </div>
            <h3>@Model.TotalReviews</h3>
            <p>إجمالي التقييمات</p>
        </div>
        <i class="fas fa-comments stat-card-bg-icon"></i>
    </div>

    <div class="stat-card card-rating">
        <div class="stat-card-content">
            <div class="stat-card-icon">
                <i class="fas fa-star"></i>
            </div>
            <h3>@Model.AverageRating.ToString("F1")</h3>
            <p>متوسط التقييم</p>
        </div>
        <i class="fas fa-star stat-card-bg-icon"></i>
    </div>
</div>

@* ===========================
   ✅ Quick Stats
   =========================== *@
@{
    var activeWorkers = Model.TopWorkers?.Count(w => w.IsAvailable) ?? 0;
    var totalCategories = Model.Categories?.Count() ?? 0;
}

<div class="quick-stats">
    <div class="quick-stat-item active-workers">
        <div class="quick-stat-icon">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="quick-stat-info">
            <h4>@activeWorkers</h4>
            <p>عمال متاحين حالياً</p>
        </div>
    </div>
    <div class="quick-stat-item new-clients">
        <div class="quick-stat-icon">
            <i class="fas fa-tags"></i>
        </div>
        <div class="quick-stat-info">
            <h4>@totalCategories</h4>
            <p>فئات الخدمات</p>
        </div>
    </div>
    <div class="quick-stat-item recent-reviews">
        <div class="quick-stat-icon">
            <i class="fas fa-trophy"></i>
        </div>
        <div class="quick-stat-info">
            <h4>@(Model.TopWorkers?.Count() ?? 0)</h4>
            <p>أفضل العمال</p>
        </div>
    </div>
</div>

@* ===========================
   ✅ Average Rating Overview
   =========================== *@
@if (Model.TotalReviews > 0)
{
    var avgRating = Model.AverageRating;
    <div class="rating-overview-card">
        <div class="rating-main">
            <h2>@avgRating.ToString("F1")</h2>
            <div class="rating-stars">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Round(avgRating))
                    {
                        <i class="fas fa-star"></i>
                    }
                    else
                    {
                        <i class="fas fa-star empty"></i>
                    }
                }
            </div>
            <p class="rating-label">متوسط التقييم العام من @Model.TotalReviews تقييم</p>
        </div>
        <div class="rating-breakdown">
            @for (int stars = 5; stars >= 1; stars--)
            {
                var percentage = 20 * stars; // Placeholder - ideally calculate from actual data
                                             <div class="breakdown-row">
                                                 <span class="breakdown-label">@stars نجوم</span>
                                                 <div class="breakdown-bar">
                                                     <div class="breakdown-fill breakdown-fill-@stars" style="width: @percentage%"></div>
                                                 </div>
                                                 <span class="breakdown-count">@percentage%</span>
                                             </div>
            }
        </div>
    </div>
}

@* ===========================
   ✅ Categories Distribution
   =========================== *@
@if (Model.Categories != null && Model.Categories.Any())
{
    <div class="categories-section">
        <div class="categories-header">
            <h3>
                <i class="fas fa-layer-group"></i>
                توزيع الفئات
            </h3>
        </div>
        <div class="categories-grid">
            @foreach (var category in Model.Categories)
            {
                var workersInCategory = Model.TopWorkers?.Count(w => w.CategoryId == category.Id) ?? 0;
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-tag"></i>
                    </div>
                    <div class="category-info">
                        <h4>@category.Name</h4>
                        <p>@workersInCategory عامل</p>
                    </div>
                </div>
            }
        </div>
    </div>
}

@* ===========================
   ✅ Top Workers Section Title
   =========================== *@
<h3 class="section-title">
    <i class="fas fa-trophy"></i>
    أفضل 5 عمال تقييماً
</h3>

@* ===========================
   ✅ Top Workers Card
   =========================== *@
<div class="top-workers-card">
    <div class="top-workers-header">
        <h3>
            <i class="fas fa-medal"></i>
            قائمة المتميزين
        </h3>
        <span class="badge">@(Model.TopWorkers?.Count() ?? 0) عامل</span>
    </div>

    @if (Model.TopWorkers != null && Model.TopWorkers.Any())
    {
        <!-- Desktop Table -->
        <div class="desktop-table">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 80px;">الترتيب</th>
                            <th>العامل</th>
                            <th>التخصص</th>
                            <th>عدد التقييمات</th>
                            <th>متوسط التقييم</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var worker in Model.TopWorkers)
                        {
                            var avg = (worker.Reviews != null && worker.Reviews.Any()) ? worker.Reviews.Average(r => r.Rating) : 0;
                            var rankClass = rank <= 3 ? $"rank-{rank}" : "rank-other";
                            <tr>
                                <td>
                                    <span class="rank-badge @rankClass">@rank</span>
                                </td>
                                <td>
                                    <div class="worker-cell">
                                        <div class="worker-avatar">
                                            @(worker.User?.Name?.Substring(0, 1).ToUpper() ?? "W")
                                        </div>
                                        <span class="worker-name">@worker.User?.Name</span>
                                    </div>
                                </td>
                                <td>
                                    @foreach (var c in Model.Categories)
                                    {
                                        if (c.Id == worker.CategoryId)
                                        {
                                            <span class="category-badge">
                                                <i class="fas fa-briefcase"></i>
                                                @c.Name
                                            </span>
                                        }
                                    }
                                </td>
                                <td>
                                    <span class="reviews-count">
                                        <i class="fas fa-comments"></i>
                                        @(worker.Reviews?.Count ?? 0) تقييم
                                    </span>
                                </td>
                                <td>
                                    <span class="rating-badge">
                                        @avg.ToString("F1")
                                        <i class="fas fa-star"></i>
                                    </span>
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Cards -->
        <div class="mobile-workers-cards">
            @{
                int mobileRank = 1;
            }
            @foreach (var worker in Model.TopWorkers)
            {
                var avg = (worker.Reviews != null && worker.Reviews.Any()) ? worker.Reviews.Average(r => r.Rating) : 0;
                var rankClass = mobileRank <= 3 ? $"rank-{mobileRank}" : "rank-other";

                <div class="worker-rank-card @rankClass">
                    <div class="worker-rank-header">
                        <div class="worker-rank-info">
                            <span class="worker-rank-number">@mobileRank</span>
                            <span class="worker-rank-name">@worker.User?.Name</span>
                        </div>
                        <span class="worker-rank-rating">
                            @avg.ToString("F1")
                            <i class="fas fa-star"></i>
                        </span>
                    </div>

                    <div class="worker-rank-body">
                        <div class="worker-rank-details">
                            <div class="detail-item">
                                <i class="fas fa-briefcase"></i>
                                <span>
                                    @foreach (var c in Model.Categories)
                                    {
                                        if (c.Id == worker.CategoryId)
                                        {
                                            @c.Name
                                        }
                                    }
                                </span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-comments"></i>
                                <span>@(worker.Reviews?.Count ?? 0) تقييم</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@(worker.User?.City ?? "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                </div>

                mobileRank++;
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-trophy"></i>
            </div>
            <h4>لا توجد بيانات متاحة</h4>
            <p>ستظهر قائمة أفضل العمال عند توفر تقييمات كافية</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات إضافية للتقارير هنا
        // مثل الرسوم البيانية أو التحديث التلقائي
    </script>
