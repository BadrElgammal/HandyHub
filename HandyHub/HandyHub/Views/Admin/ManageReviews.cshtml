@using HandyHub.Models.Entities
@model IEnumerable<Review>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إدارة التقييمات";
}

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4"><i class="fas fa-comments text-warning me-2"></i> جميع التقييمات</h2>

        <div class="card border-0 shadow rounded-4">
            <table class="table table-hover mb-0">
                <thead class="bg-warning">
                    <tr>
                        <th>العميل</th>
                        <th>العامل</th>
                        <th>التقييم</th>
                        <th>التعليق</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Client?.Name</td>
                            <td>@r.Worker?.Name</td>
                            <td>@r.Rating ⭐</td>
                            <td>@r.Comment</td>
                            <td>
                                <form asp-action="DeleteReview" method="post">
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <button class="btn btn-sm btn-danger rounded-3"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>