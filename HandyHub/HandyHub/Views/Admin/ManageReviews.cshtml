@using HandyHub.Models.Entities
@model IEnumerable<Review>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إدارة التقييمات";
}

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4">
            <i class="fas fa-comments text-warning me-2"></i> جميع التقييمات
        </h2>

        <div class="card border-0 shadow rounded-4 overflow-hidden">

            <!-- جعل الجدول Responsive -->
            <div class="table-responsive">
                <table class="table table-hover mb-0 text-center align-middle">
                    <thead class="bg-warning text-white">
                        <tr>
                            <th>العميل</th>
                            <th>العامل</th>
                            <th>التقييم</th>
                            <th>التعليق</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-muted py-4">
                                    لا توجد تقييمات حالياً
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.Client?.User?.Name</td>
                                    <td>@r.Worker?.User?.Name</td>
                                    <td>@r.Rating ⭐</td>
                                    <td class="text-break">@r.Comment</td>
                                    <td>
                                        <form asp-action="DeleteReview"
                                              method="post"
                                              onsubmit="return confirm('هل أنت متأكد من حذف هذا التقييم؟');"
                                              style="display:inline-block;">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger rounded-3">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>
