@model HandyHub.Models.ViewModels.AdminVM.EditAdminVM
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعديل بياناتى";
}

<style>
    /* ===========================
           ✅ Page Header Banner
           =========================== */
    .page-header-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: #fff;
        position: relative;
        overflow: hidden;
    }

        .page-header-banner::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
            animation: pulse 4s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.3;
        }
    }

    .page-header-content {
        position: relative;
        z-index: 2;
    }

    .page-header-icon {
        position: absolute;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 5rem;
        opacity: 0.15;
    }

    /* ===========================
           ✅ Form Card
           =========================== */
    .form-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-body {
        padding: 2rem;
    }

    /* ===========================
           ✅ Profile Image Upload
           =========================== */
    .profile-upload-section {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        border-radius: 16px;
        border: 2px dashed rgba(102, 126, 234, 0.3);
        margin-bottom: 2rem;
        transition: all 0.3s ease;
    }

        .profile-upload-section:hover {
            border-color: #667eea;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.08), rgba(118, 75, 162, 0.08));
        }

    .current-avatar {
        position: relative;
    }

        .current-avatar img {
            width: 100px;
            height: 100px;
            border-radius: 20px;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            transition: all 0.3s ease;
        }

        .current-avatar:hover img {
            transform: scale(1.05);
        }

    .avatar-badge {
        position: absolute;
        bottom: -5px;
        right: -5px;
        width: 35px;
        height: 35px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 0.9rem;
        border: 3px solid #fff;
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .upload-info h4 {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .upload-info p {
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 0.75rem;
    }

    .file-input-wrapper {
        position: relative;
    }

        .file-input-wrapper input[type="file"] {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

    .file-input-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 0.6rem 1.25rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: #fff;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .file-input-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

    /* ===========================
           ✅ Form Sections
           =========================== */
    .form-section {
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #f1f5f9;
    }

        .section-title i {
            width: 35px;
            height: 35px;
            border-radius: 10px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.95rem;
        }

    .section-title-green i {
        background: linear-gradient(135deg, #11998e, #38ef7d);
    }

    .section-title-orange i {
        background: linear-gradient(135deg, #fa709a, #fee140);
    }

    /* ===========================
           ✅ Form Inputs
           =========================== */
    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        display: block;
        font-size: 0.9rem;
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.5rem;
    }

        .form-label i {
            color: #667eea;
            margin-left: 6px;
        }

    .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 0.95rem;
        font-family: 'Cairo', sans-serif;
        transition: all 0.3s ease;
        background: #fff;
    }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        .form-input::placeholder {
            color: #94a3b8;
        }

    .form-input-icon {
        position: relative;
    }

        .form-input-icon i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            transition: color 0.3s ease;
        }

        .form-input-icon input {
            padding-right: 45px;
        }

        .form-input-icon:focus-within i {
            color: #667eea;
        }

    .validation-error {
        color: #ef4444;
        font-size: 0.8rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

        .validation-error::before {
            content: '\f06a';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
        }

    /* ===========================
           ✅ Password Section
           =========================== */
    .password-section {
        background: linear-gradient(135deg, rgba(250, 112, 154, 0.05), rgba(254, 225, 64, 0.05));
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid rgba(250, 112, 154, 0.2);
    }

    .password-toggle {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #94a3b8;
        cursor: pointer;
        padding: 5px;
        transition: color 0.3s ease;
    }

        .password-toggle:hover {
            color: #667eea;
        }

    /* ===========================
           ✅ Action Buttons
           =========================== */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1.5rem;
        border-top: 2px solid #f1f5f9;
        margin-top: 2rem;
    }

    .btn-cancel {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 0.875rem 1.5rem;
        background: #f1f5f9;
        color: #64748b;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #e2e8f0;
            color: #475569;
            transform: translateX(5px);
        }

    .btn-save {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 0.875rem 2rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: #fff;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
        }

        .btn-save:active {
            transform: translateY(-1px);
        }

    /* ===========================
           ✅ Responsive - Tablet
           =========================== */
    @@media (max-width: 991.98px) {
        .page-header-banner {
            padding: 1.5rem;
        }

        .page-header-icon {
            display: none;
        }

        .form-body {
            padding: 1.5rem;
        }

        .profile-upload-section {
            flex-direction: column;
            text-align: center;
        }

        .upload-info {
            text-align: center;
        }
    }

    /* ===========================
           ✅ Responsive - Mobile
           =========================== */
    @@media (max-width: 767.98px) {
        .page-header-banner {
            padding: 1.25rem;
            border-radius: 16px;
            text-align: center;
        }

            .page-header-banner h1 {
                font-size: 1.25rem;
            }

            .page-header-banner p {
                font-size: 0.9rem;
            }

        .form-body {
            padding: 1.25rem;
        }

        .profile-upload-section {
            padding: 1.25rem;
        }

        .current-avatar img {
            width: 80px;
            height: 80px;
        }

        .avatar-badge {
            width: 30px;
            height: 30px;
            font-size: 0.8rem;
        }

        .section-title {
            font-size: 1rem;
        }

            .section-title i {
                width: 32px;
                height: 32px;
                font-size: 0.85rem;
            }

        .form-input {
            padding: 0.75rem 0.875rem;
            font-size: 0.9rem;
        }

        .password-section {
            padding: 1.25rem;
        }

        .form-actions {
            flex-direction: column-reverse;
            gap: 1rem;
        }

        .btn-cancel, .btn-save {
            width: 100%;
            justify-content: center;
        }
    }

    /* ===========================
           ✅ Responsive - Small Mobile
           =========================== */
    @@media (max-width: 575.98px) {
        .page-header-banner {
            padding: 1rem;
            margin-bottom: 1.25rem;
        }

            .page-header-banner h1 {
                font-size: 1.1rem;
            }

        .form-card {
            border-radius: 16px;
        }

        .form-body {
            padding: 1rem;
        }

        .profile-upload-section {
            padding: 1rem;
            border-radius: 14px;
        }

        .current-avatar img {
            width: 70px;
            height: 70px;
            border-radius: 16px;
        }

        .upload-info h4 {
            font-size: 0.95rem;
        }

        .upload-info p {
            font-size: 0.8rem;
        }

        .file-input-btn {
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
        }

        .section-title {
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

            .section-title i {
                width: 30px;
                height: 30px;
                font-size: 0.8rem;
            }

        .form-label {
            font-size: 0.85rem;
        }

        .form-input {
            padding: 0.7rem 0.75rem;
            font-size: 0.85rem;
            border-radius: 10px;
        }

        .password-section {
            padding: 1rem;
            border-radius: 14px;
        }

        .btn-cancel, .btn-save {
            padding: 0.75rem 1.25rem;
            font-size: 0.9rem;
            border-radius: 10px;
        }
    }
</style>

@* ===========================
   ✅ Page Header Banner
   =========================== *@
<div class="page-header-banner">
    <i class="fas fa-user-edit page-header-icon"></i>
    <div class="page-header-content">
        <h1 class="text-2xl font-bold mb-2 flex items-center gap-3">
            <i class="fas fa-user-cog"></i>
            تعديل بياناتي الشخصية
        </h1>
        <p class="opacity-90">قم بتحديث معلومات حسابك للحفاظ على بياناتك دقيقة ومحدثة</p>
    </div>
</div>

@* ===========================
   ✅ Form Card
   =========================== *@
<div class="form-card">
    <div class="form-body">
        <div asp-validation-summary="ModelOnly" class="alert-custom alert-danger-custom mb-4" style="display: none;"></div>

        <form asp-action="EditAdmin" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.UserId" />

            @* ===========================
               ✅ Profile Image Section
               =========================== *@
            <div class="profile-upload-section">
                <div class="current-avatar">
                    <img src="~/ProfileImages/@(string.IsNullOrEmpty(Model.ExistingProfileImagePath) ? "default-avatar-admin.png" : Model.ExistingProfileImagePath)"
                         alt="Profile" id="avatarPreview" />
                    <span class="avatar-badge">
                        <i class="fas fa-camera"></i>
                    </span>
                </div>
                <div class="upload-info">
                    <h4>الصورة الشخصية</h4>
                    <p>اختر صورة بصيغة JPG, PNG أو GIF (الحد الأقصى 5MB)</p>
                    <div class="file-input-wrapper">
                        <input asp-for="@Model.ProfileImage"
                               type="file"
                               accept="image/*"
                               id="profileImageInput" />
                        <span class="file-input-btn">
                            <i class="fas fa-cloud-upload-alt"></i>
                            اختر صورة جديدة
                        </span>
                    </div>
                    <span asp-validation-for="@Model.ProfileImage" class="validation-error"></span>
                </div>
            </div>

            @* ===========================
               ✅ Basic Information Section
               =========================== *@
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-user"></i>
                    المعلومات الأساسية
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user"></i>
                            الاسم الكامل
                        </label>
                        <div class="form-input-icon">
                            <i class="fas fa-user"></i>
                            <input asp-for="@Model.Name"
                                   class="form-input"
                                   placeholder="أدخل اسمك الكامل" />
                        </div>
                        <span asp-validation-for="@Model.Name" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope"></i>
                            البريد الإلكتروني
                        </label>
                        <div class="form-input-icon">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="@Model.Email"
                                   type="email"
                                   class="form-input"
                                   placeholder="example@email.com" />
                        </div>
                        <span asp-validation-for="@Model.Email" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-phone"></i>
                            رقم الهاتف
                        </label>
                        <div class="form-input-icon">
                            <i class="fas fa-phone"></i>
                            <input asp-for="@Model.Phone"
                                   class="form-input"
                                   placeholder="01xxxxxxxxx" />
                        </div>
                        <span asp-validation-for="@Model.Phone" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-map-marker-alt"></i>
                            المدينة
                        </label>
                        <div class="form-input-icon">
                            <i class="fas fa-map-marker-alt"></i>
                            <input asp-for="@Model.City"
                                   class="form-input"
                                   placeholder="أدخل مدينتك" />
                        </div>
                    </div>
                </div>
            </div>

            @* ===========================
               ✅ Password Section
               =========================== *@
            <div class="form-section">
                <div class="password-section">
                    <h3 class="section-title section-title-orange" style="border-bottom: none; padding-bottom: 0; margin-bottom: 1rem;">
                        <i class="fas fa-lock"></i>
                        تغيير كلمة المرور
                        <span class="text-sm font-normal text-gray-500 mr-2">(اختياري)</span>
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-key"></i>
                                كلمة المرور الجديدة
                            </label>
                            <div class="form-input-icon" style="position: relative;">
                                <i class="fas fa-lock"></i>
                                <input asp-for="@Model.Password"
                                       type="password"
                                       class="form-input"
                                       id="passwordInput"
                                       placeholder="اتركه فارغاً إذا لم ترد التغيير"
                                       style="padding-left: 45px;" />
                                <button type="button" class="password-toggle" onclick="togglePassword('passwordInput', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-check-double"></i>
                                تأكيد كلمة المرور
                            </label>
                            <div class="form-input-icon" style="position: relative;">
                                <i class="fas fa-lock"></i>
                                <input asp-for="@Model.ConfirmPassword"
                                       type="password"
                                       class="form-input"
                                       id="confirmPasswordInput"
                                       placeholder="أعد كتابة كلمة المرور"
                                       style="padding-left: 45px;" />
                                <button type="button" class="password-toggle" onclick="togglePassword('confirmPasswordInput', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="@Model.ConfirmPassword" class="validation-error"></span>
                        </div>
                    </div>
                </div>
            </div>

            @* ===========================
               ✅ Action Buttons
               =========================== *@
            <div class="form-actions">
                <a href="@Url.Action("Dashboard", "Admin")" class="btn-cancel">
                    <i class="fas fa-arrow-right"></i>
                    إلغاء والرجوع
                </a>
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i>
                    حفظ التعديلات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // ✅ معاينة الصورة قبل الرفع
        document.getElementById('profileImageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('avatarPreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });

        // ✅ إظهار/إخفاء كلمة المرور
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}