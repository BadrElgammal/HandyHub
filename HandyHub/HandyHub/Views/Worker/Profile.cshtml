@using HandyHub.Models.ViewModels.WorkerVM
@model WorkerEditViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Worker Dashboard";
}

<div class="min-h-screen bg-gray-50 py-8" dir="rtl">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Profile Header -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden mb-8 relative">

            <div class="h-32 bg-gradient-to-br from-teal-600 to-blue-600 w-full"></div>

            <div class="px-6 pb-6">

                <div class="flex flex-col lg:flex-row justify-between items-center gap-6">

                    <!-- Profile Image -->
                    <div class="relative -mt-12 flex-shrink-0 order-1">
                        <img src="~/ProfileImages/@(string.IsNullOrEmpty(Model.Worker.User?.ImageUrl) ? "default-avatar-admin.png" : Model.Worker.User?.ImageUrl)"
                             class="w-32 h-32 rounded-full border-4 border-white shadow-md object-cover" />

                        @if (Model.Worker.IsAvailable)
                        {
                            <div class="absolute bottom-2 right-2 w-5 h-5 bg-green-500 border-2 border-white rounded-full"></div>
                        }
                        else
                        {
                            <div class="absolute bottom-2 right-2 w-5 h-5 bg-gray-400 border-2 border-white rounded-full"></div>
                        }
                    </div>

                    <!-- Name & Info -->
                    <div class="flex-1 text-center lg:text-right order-2 w-full lg:w-auto">

                        <!-- الاسم -->
                        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-3">
                            @Model.Worker.User.Name
                        </h2>

                        <!-- Badges -->
                        <div class="flex items-center gap-2 justify-center lg:justify-start mb-3 flex-wrap">
                            @if (Model.Worker.IsAvailable)
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-700 border border-green-200">
                                    <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                                    متاح للعمل
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-600 border border-gray-200">
                                    <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
                                    غير متاح
                                </span>
                            }

                            @if (Model.Worker.Category != null)
                            {
                                <span class="inline-flex items-center gap-1 bg-teal-50 text-teal-700 px-3 py-1 rounded-lg text-sm font-medium border border-teal-200">
                                    <i class="ri-tools-line"></i>
                                    @Model.Worker.Category.Name
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 bg-gray-50 text-gray-500 px-3 py-1 rounded-lg text-sm font-medium border border-gray-200">
                                    <i class="ri-close-line"></i>
                                    بدون مهنة
                                </span>
                            }
                        </div>

                        <!-- Bio -->
                        @if (!string.IsNullOrEmpty(Model.Worker.Bio))
                        {
                            <p class="text-gray-500 font-medium mb-3">@Model.Worker.Bio</p>
                        }

                        <!-- Contact Info -->
                        <div class="flex flex-wrap justify-center lg:justify-start gap-x-4 gap-y-2 text-sm text-gray-600">
                            <span class="flex items-center gap-1">
                                <i class="ri-map-pin-line text-gray-400"></i>
                                @Model.Worker.User.City
                            </span>
                            <span class="flex items-center gap-1">
                                <i class="ri-phone-line text-gray-400"></i>
                                @Model.Worker.User.Phone
                            </span>
                            <span class="flex items-center gap-1">
                                <i class="ri-mail-line text-gray-400"></i>
                                @Model.Worker.User.Email
                            </span>
                        </div>

                    </div>

                    <!-- Buttons -->
                    <div class="flex flex-row lg:flex-col gap-2 flex-shrink-0 order-3">

                        <!-- زر متاح / غير متاح -->
                        <form asp-action="ToggleAvailability" asp-route-id="@Model.Worker.Id" method="post">
                            @if (Model.Worker.IsAvailable)
                            {
                                <button type="submit"
                                        class="px-4 py-2 bg-green-50 border border-green-200 text-green-700 text-sm font-medium rounded-lg hover:bg-green-100 transition shadow-sm flex items-center justify-center gap-2">
                                    <span class="relative flex h-2.5 w-2.5">
                                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
                                    </span>
                                    متاح للعمل
                                </button>
                            }
                            else
                            {
                                <button type="submit"
                                        class="px-4 py-2 bg-gray-100 border border-gray-300 text-gray-600 text-sm font-medium rounded-lg hover:bg-gray-200 transition shadow-sm flex items-center justify-center gap-2">
                                    <span class="relative flex h-2.5 w-2.5">
                                        <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-gray-400"></span>
                                    </span>
                                    غير متاح
                                </button>
                            }
                        </form>

                        <a asp-action="EditWorker" asp-route-id="@Model.Worker.Id"
                           class="px-4 py-2 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 hover:text-blue-600 transition shadow-sm flex items-center justify-center">
                            <i class="ri-edit-box-line ml-1"></i> تعديل
                        </a>

                        <form asp-action="DeleteWorker" asp-route-id="@Model.Worker.Id" method="post"
                              onsubmit="return confirm('هل أنت متأكد من حذف هذا العامل؟');">
                            <button type="submit"
                                    class="px-4 py-2 bg-red-50 border border-red-100 text-red-600 text-sm font-medium rounded-lg hover:bg-red-100 transition shadow-sm flex items-center justify-center">
                                <i class="ri-delete-bin-line ml-1"></i> حذف
                            </button>
                        </form>

                    </div>

                </div>
            </div>
        </div>

        <!-- Stats Boxes -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-10">

            <!-- Availability Status -->
            <div class="bg-white p-4 md:p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition">
                <div>
                    <p class="text-gray-500 text-xs md:text-sm font-medium">حالة التوفر</p>
                    @if (Model.Worker.IsAvailable)
                    {
                        <h3 class="text-lg md:text-xl font-bold text-green-600 mt-1">متاح للعمل</h3>
                    }
                    else
                    {
                        <h3 class="text-lg md:text-xl font-bold text-gray-500 mt-1">غير متاح</h3>
                    }
                </div>
                <div class="w-10 h-10 md:w-12 md:h-12 @(Model.Worker.IsAvailable ? "bg-green-50 text-green-600" : "bg-gray-100 text-gray-500") rounded-lg flex items-center justify-center text-xl md:text-2xl">
                    <i class="@(Model.Worker.IsAvailable ? "ri-user-follow-line" : "ri-user-unfollow-line")"></i>
                </div>
            </div>

            <!-- Orders Count -->
            <div class="bg-white p-4 md:p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition">
                <div>
                    <p class="text-gray-500 text-xs md:text-sm font-medium">عدد الطلبات</p>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-800 mt-1">@Model.Worker.Reviews.Count()</h3>
                </div>
                <div class="w-10 h-10 md:w-12 md:h-12 bg-blue-50 text-blue-600 rounded-lg flex items-center justify-center text-xl md:text-2xl">
                    <i class="ri-list-check"></i>
                </div>
            </div>

            <!-- Rating -->
            <div class="bg-white p-4 md:p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition">
                <div>
                    <p class="text-gray-500 text-xs md:text-sm font-medium">التقييم العام</p>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-800 mt-1">
                        @(Model.Worker.Reviews.Any()
                                                ? Model.Worker.Reviews.Average(r => r.Rating).ToString("0.0")
                                                : "0")
                    </h3>
                </div>
                <div class="w-10 h-10 md:w-12 md:h-12 bg-yellow-50 text-yellow-500 rounded-lg flex items-center justify-center text-xl md:text-2xl">
                    <i class="ri-star-fill"></i>
                </div>
            </div>

            <!-- Reviews Count -->
            <div class="bg-white p-4 md:p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition">
                <div>
                    <p class="text-gray-500 text-xs md:text-sm font-medium">آراء العملاء</p>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-800 mt-1">@Model.Worker.Reviews.Count()</h3>
                </div>
                <div class="w-10 h-10 md:w-12 md:h-12 bg-purple-50 text-purple-600 rounded-lg flex items-center justify-center text-xl md:text-2xl">
                    <i class="ri-chat-1-line"></i>
                </div>
            </div>
        </div>

        <!-- Portfolio Section -->
        <div class="mb-12">
            <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
                <h2 class="text-xl md:text-2xl font-bold text-gray-800 flex items-center gap-2">
                    <i class="ri-gallery-line text-blue-600"></i> معرض الأعمال
                </h2>

                <a asp-action="AddProfile" asp-route-id="@Model.Worker.Id"
                   class="bg-teal-600 hover:bg-teal-700 text-white px-6 py-2.5 rounded-lg shadow-lg shadow-teal-200 transition flex items-center gap-2">
                    <i class="ri-add-circle-line text-xl"></i> إضافة عمل جديد
                </a>
            </div>

            <!-- Portfolio Cards -->
            @if (Model.Worker.Portfolio == null || !Model.Worker.Portfolio.Any())
            {
                <div class="text-center py-10 bg-gray-50 rounded-xl border border-gray-200">
                    <i class="ri-folder-warning-line text-5xl text-gray-400"></i>
                    <p class="text-gray-600 text-lg font-semibold mt-3">لا يوجد أعمال لهذا العامل</p>
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var item in Model.Worker.Portfolio)
                    {
                        <div class="bg-white rounded-xl shadow border border-gray-100 overflow-hidden hover:shadow-lg transition">

                            <!-- الصورة -->
                            <div class="relative">
                                <img src="~/worker-portfolio/@item.ImageUrl"
                                     alt="@item.Bio"
                                     class="w-full h-48 object-cover" />

                                <!-- أزرار صغيرة في الزاوية -->
                                <div class="absolute top-2 left-2 flex gap-1">
                                    <a asp-action="EditPortfolio" asp-route-id="@item.Id"
                                       class="w-8 h-8 bg-white/90 backdrop-blur rounded-full flex items-center justify-center shadow hover:bg-blue-500 hover:text-white text-blue-600 transition">
                                        <i class="ri-edit-line text-sm"></i>
                                    </a>

                                    <form asp-action="DeletePortfolio" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('هل أنت متأكد من حذف هذا العمل؟');">
                                        <button type="submit"
                                                class="w-8 h-8 bg-white/90 backdrop-blur rounded-full flex items-center justify-center shadow hover:bg-red-500 hover:text-white text-red-600 transition">
                                            <i class="ri-delete-bin-line text-sm"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <!-- المحتوى -->
                            <div class="p-5">
                                <h3 class="font-bold text-gray-800 text-lg">@item.Bio</h3>
                                <p class="text-gray-500 text-sm mt-2 line-clamp-2">@item.Area</p>
                            </div>

                        </div>
                    }
                </div>
            }
        </div>

        <!-- Reviews Section -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 md:p-8">
            <h2 class="text-xl font-bold text-gray-800 mb-6 border-b pb-4 flex items-center gap-2">
                <i class="ri-chat-3-line text-purple-600"></i>
                أحدث التقييمات
            </h2>

            @if (Model.Worker.Reviews == null || !Model.Worker.Reviews.Any())
            {
                <div class="text-center py-10">
                    <i class="ri-chat-off-line text-5xl text-gray-400"></i>
                    <p class="text-gray-600 text-lg font-semibold mt-3">لا يوجد تقييمات بعد</p>
                </div>
            }
            else
            {
                <div class="space-y-6">
                    @foreach (var item in Model.Worker.Reviews)
                    {
                        <div class="flex gap-4 p-4 bg-gray-50 rounded-xl">
                            <img src="~/ProfileImages/@(string.IsNullOrEmpty(item.Client.User?.ImageUrl) ? "default-avatar-admin.png" : item.Client.User?.ImageUrl)"
                                 class="w-12 h-12 rounded-full object-cover flex-shrink-0 border-2 border-white shadow" />
                            <div class="min-w-0 flex-1">
                                <div class="flex items-center justify-between flex-wrap gap-2">
                                    <h4 class="font-bold text-gray-900">@item.Client.User.Name</h4>
                                    <span class="text-xs text-gray-400 bg-white px-2 py-1 rounded">@item.CreatedAt.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="flex items-center my-2 space-x-1 space-x-reverse">
                                    @for (int i = 0; i < item.Rating; i++)
                                    {
                                        <i class="ri-star-fill text-yellow-400"></i>
                                    }
                                    @for (int i = item.Rating; i < 5; i++)
                                    {
                                        <i class="ri-star-line text-gray-300"></i>
                                    }
                                </div>

                                <p class="text-gray-600 text-sm leading-relaxed">
                                    @item.Comment
                                </p>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

    </div>
</div>