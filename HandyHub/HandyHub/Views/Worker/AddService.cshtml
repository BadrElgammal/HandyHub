@using HandyHub.Models.Entities
@model WorkerPortfolio

@{
    ViewData["Title"] = "إضافة عمل جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-12 text-right" dir="rtl">
    <main class="max-w-3xl mx-auto bg-white rounded-2xl shadow-sm p-8 my-6 border border-gray-100">

        <h1 class="text-3xl font-bold text-gray-900 mb-2 flex items-center gap-2">
            <i class="ri-image-add-line text-teal-600"></i> إضافة عمل جديد
        </h1>
        <p class="text-gray-600 mb-8 border-b pb-4">أدخل تفاصيل العمل الجديد ليظهر في معرض أعمالك.</p>

        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 bg-red-50 p-3 rounded-lg border border-red-100"></div>

        <form method="post" asp-action="AddProfile" enctype="multipart/form-data" class="space-y-6">

            <input type="hidden" asp-for="WorkerId" />

            <div>
                <label asp-for="Bio" class="block text-sm font-medium text-gray-700 mb-1">عنوان العمل</label>
                <input asp-for="Bio" type="text"
                       placeholder="مثال: تركيب مطبخ مودرن، صيانة تكييف مركزي..."
                       class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm" />
                <span asp-validation-for="Bio" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Area" class="block text-sm font-medium text-gray-700 mb-1">تفاصيل العمل</label>
                <textarea asp-for="Area" rows="4"
                          placeholder="اكتب وصفًا مختصرًا عن تفاصيل هذا العمل وما تم إنجازه..."
                          class="w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"></textarea>
                <span asp-validation-for="Area" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">صورة العمل</label>
                <label for="image-upload"
                       class="flex flex-col items-center justify-center w-full h-48 border-2 border-dashed border-gray-300 rounded-xl bg-gray-50 cursor-pointer hover:border-teal-500 hover:bg-teal-50 transition relative group">

                    <div class="flex flex-col items-center justify-center pt-5 pb-6">
                        <i class="ri-upload-cloud-2-line text-4xl text-gray-400 group-hover:text-teal-600 mb-2 transition-colors"></i>
                        <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">اضغط للرفع</span> أو اسحب الصورة هنا</p>
                        <p class="text-xs text-gray-400">PNG, JPG or JPEG</p>
                    </div>

                    <input id="image-upload" name="image" type="file" accept="image/*" class="hidden" required />
                </label>
                <span asp-validation-for="ImageUrl" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-between items-center pt-6 border-t border-gray-100 mt-6">
                <a asp-action="Profile" class="text-gray-600 hover:text-teal-600 font-medium flex items-center transition-colors">
                    <i class="ri-arrow-go-back-line ml-1"></i> إلغاء ورجوع
                </a>

                <button type="submit"
                        class="px-8 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-semibold flex items-center shadow-lg shadow-teal-500/30 transition-all transform hover:-translate-y-0.5">
                    <i class="ri-save-line ml-1"></i> حفظ العمل
                </button>
            </div>
        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}