@using System.Security.Claims
@{
    var userEmail = User?.FindFirst(ClaimTypes.Email)?.Value ?? "email@example.com";
    var userRole = User?.FindFirst(ClaimTypes.Role)?.Value ?? "Admin";
    var userName = User?.FindFirst(ClaimTypes.Name)?.Value ?? "Administrator";
    var adminImage = ViewBag.AdminImage ?? "/images/OIP.jpeg";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HandyHub Admin</title>

    <!-- ✅ روابط Bootstrap و FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f7f8fa;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 240px;
            background: #212529;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            right: 0;
            top: 0;
            bottom: 0;
            padding-top: 20px;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .sidebar-header img {
                width: 70px;
                height: 70px;
                border-radius: 50%;
                border: 2px solid #0d6efd;
            }

            .sidebar-header h5 {
                margin-top: 10px;
                color: #fff;
                font-weight: bold;
            }

            .sidebar-header small {
                color: #bbb;
            }

        .nav-links a {
            display: block;
            color: #ddd;
            padding: 12px 20px;
            text-decoration: none;
            transition: all 0.2s;
        }

            .nav-links a:hover,
            .nav-links .active {
                background-color: #0d6efd;
                color: #fff;
            }

        .sidebar-footer {
            text-align: center;
            padding: 15px;
            border-top: 1px solid #333;
        }

        .content {
            margin-right: 240px;
            padding: 30px;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="admin-container">
        <!-- ✅ الشريط الجانبي -->
        <div class="sidebar">
            <div>
                <!-- ✅ رأس الشريط الجانبي -->
                <div class="sidebar-header">
                    <img src="@adminImage" alt="Profile" />
                    <h5>@userName</h5>
                    <small>@userEmail</small><br />
                    <span class="badge bg-success">@userRole</span>
                </div>

                <!-- ✅ روابط لوحة التحكم -->
                <div class="nav-links">
                    <a asp-controller="Admin" asp-action="Dashboard"
                       class="@(ViewContext.RouteData.Values["action"]!.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fa-solid fa-gauge"></i> لوحة التحكم
                    </a>

                    <a asp-controller="Admin" asp-action="ManageClients"
                       class="@(ViewContext.RouteData.Values["action"]!.ToString() == "ManageClients" ? "active" : "")">
                        <i class="fa-solid fa-users"></i> العملاء
                    </a>

                    <a asp-controller="Admin" asp-action="ManageWorkers"
                       class="@(ViewContext.RouteData.Values["action"]!.ToString() == "ManageWorkers" ? "active" : "")">
                        <i class="fa-solid fa-person-digging"></i> العمال
                    </a>

                    <a asp-controller="Admin" asp-action="ManageCategories"
                       class="@(ViewContext.RouteData.Values["action"]!.ToString() == "ManageCategories" ? "active" : "")">
                        <i class="fa-solid fa-tags"></i> الفئات
                    </a>

                    <a asp-controller="Admin" asp-action="ManageReviews"
                       class="@(ViewContext.RouteData.Values["action"]!.ToString() == "ManageReviews" ? "active" : "")">
                        <i class="fa-solid fa-comments"></i> التقييمات
                    </a>

                    <a asp-controller="Admin" asp-action="Reports"
                       class="@(ViewContext.RouteData.Values["action"]!.ToString() == "Reports" ? "active" : "")">
                        <i class="fa-solid fa-chart-bar"></i> التقارير
                    </a>
                </div>
            </div>

            <!-- ✅ تذييل الشريط الجانبي -->
            <div class="sidebar-footer">
                <li><a class="dropdown-item text-danger" href="@Url.Action("logout", "admin")"><i class="fas fa-sign-out-alt me-2"></i> خروج</a></li>
            </div>
        </div>

        <!-- ✅ منطقة المحتوى -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- ✅ ملفات الـ JS -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>