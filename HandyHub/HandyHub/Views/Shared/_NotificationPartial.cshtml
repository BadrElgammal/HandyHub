@if (TempData["Success"] != null || TempData["error"] != null || TempData["warning"] != null || TempData["info"] != null)
{
    <div id="alertContainer" class="fixed top-6 right-6 z-[9999] space-y-2 max-w-md">

        @* Success Message *@
        @if (TempData["Success"] != null)
        {
            <div class="alert-message bg-green-100 border border-green-200 text-green-800 rounded-lg overflow-hidden shadow-lg">
                <div class="p-4 flex items-center justify-between gap-3">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-green-200 rounded-full flex items-center justify-center flex-shrink-0">
                            <i class="ri-check-line text-xl text-green-600"></i>
                        </div>
                        <span class="font-medium">@TempData["Success"]</span>
                    </div>
                    <button onclick="closeThisAlert(this)" class="text-green-600 hover:text-green-800 transition p-1 flex-shrink-0">
                        <i class="ri-close-line text-xl"></i>
                    </button>
                </div>
                <div class="h-1 bg-green-200">
                    <div class="progress-bar h-full bg-green-500" style="width: 100%"></div>
                </div>
            </div>
        }

        @* Error Message *@
        @if (TempData["error"] != null)
        {
            <div class="alert-message bg-red-100 border border-red-200 text-red-800 rounded-lg overflow-hidden shadow-lg">
                <div class="p-4 flex items-center justify-between gap-3">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-red-200 rounded-full flex items-center justify-center flex-shrink-0">
                            <i class="ri-error-warning-line text-xl text-red-600"></i>
                        </div>
                        <span class="font-medium">@TempData["error"]</span>
                    </div>
                    <button onclick="closeThisAlert(this)" class="text-red-600 hover:text-red-800 transition p-1 flex-shrink-0">
                        <i class="ri-close-line text-xl"></i>
                    </button>
                </div>
                <div class="h-1 bg-red-200">
                    <div class="progress-bar h-full bg-red-500" style="width: 100%"></div>
                </div>
            </div>
        }

        @* Warning Message *@
        @if (TempData["warning"] != null)
        {
            <div class="alert-message bg-yellow-100 border border-yellow-200 text-yellow-800 rounded-lg overflow-hidden shadow-lg">
                <div class="p-4 flex items-center justify-between gap-3">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-yellow-200 rounded-full flex items-center justify-center flex-shrink-0">
                            <i class="ri-alert-line text-xl text-yellow-600"></i>
                        </div>
                        <span class="font-medium">@TempData["warning"]</span>
                    </div>
                    <button onclick="closeThisAlert(this)" class="text-yellow-600 hover:text-yellow-800 transition p-1 flex-shrink-0">
                        <i class="ri-close-line text-xl"></i>
                    </button>
                </div>
                <div class="h-1 bg-yellow-200">
                    <div class="progress-bar h-full bg-yellow-500" style="width: 100%"></div>
                </div>
            </div>
        }

        @* Info Message *@
        @if (TempData["info"] != null)
        {
            <div class="alert-message bg-blue-100 border border-blue-200 text-blue-800 rounded-lg overflow-hidden shadow-lg">
                <div class="p-4 flex items-center justify-between gap-3">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-blue-200 rounded-full flex items-center justify-center flex-shrink-0">
                            <i class="ri-information-line text-xl text-blue-600"></i>
                        </div>
                        <span class="font-medium">@TempData["info"]</span>
                    </div>
                    <button onclick="closeThisAlert(this)" class="text-blue-600 hover:text-blue-800 transition p-1 flex-shrink-0">
                        <i class="ri-close-line text-xl"></i>
                    </button>
                </div>
                <div class="h-1 bg-blue-200">
                    <div class="progress-bar h-full bg-blue-500" style="width: 100%"></div>
                </div>
            </div>
        }

    </div>

    <style>
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(100px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideOut {
            from {
                opacity: 1;
                transform: translateX(0);
            }

            to {
                opacity: 0;
                transform: translateX(100px);
            }
        }

        .alert-message {
            animation: slideIn 0.3s ease-out;
        }

            .alert-message.hiding {
                animation: slideOut 0.3s ease-out forwards;
            }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var alerts = document.querySelectorAll('.alert-message');

            alerts.forEach(function(alert, index) {
                var progressBar = alert.querySelector('.progress-bar');
                var duration = 4000; // 4 ثواني
                var interval = 50;
                var timeLeft = duration;

                var timer = setInterval(function() {
                    timeLeft -= interval;
                    var percentage = (timeLeft / duration) * 100;
                    progressBar.style.width = percentage + '%';
                    progressBar.style.transition = 'width ' + interval + 'ms linear';

                    if (timeLeft <= 0) {
                        clearInterval(timer);
                        closeAlert(alert);
                    }
                }, interval);

                // حفظ الـ timer عشان نقدر نوقفه لو المستخدم أغلق يدوياً
                alert.dataset.timer = timer;
            });
        });

        function closeThisAlert(button) {
            var alert = button.closest('.alert-message');
            if (alert.dataset.timer) {
                clearInterval(parseInt(alert.dataset.timer));
            }
            closeAlert(alert);
        }

        function closeAlert(alert) {
            alert.classList.add('hiding');
            setTimeout(function() {
                alert.remove();
                // لو مفيش رسائل تانية، احذف الـ container
                var container = document.getElementById('alertContainer');
                if (container && container.children.length === 0) {
                    container.remove();
                }
            }, 300);
        }
    </script>
}