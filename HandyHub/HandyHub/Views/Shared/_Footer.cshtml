@using System.Security.Claims
@{var userRole = User?.FindFirst(ClaimTypes.Role)?.Value ?? "";}
<footer class="bg-gray-700 text-gray-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid md:grid-cols-4 gap-8 mb-8 text-right">
            <div>
                <div class="flex items-center space-x-2 space-x-reverse mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-teal-600 to-blue-600 rounded-lg flex items-center justify-center">
                        <i class="ri-tools-fill text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-white" style="font-family: Pacifico, serif;">HandyHub</span>
                </div>
                <p class="text-gray-400 leading-relaxed">نربط العملاء بالعمّال المهرة لتلبية جميع احتياجاتهم الخدمية.</p>
            </div>

            <div>
                <h4 class="text-white font-semibold mb-4">للعملاء</h4>
                <ul class="space-y-2">
                    <li>
                        @if (userRole == "Client")
                        {
                            <a href="~/Client/Search" class="hover:text-white transition-colors">ابحث عن العمّال</a>
                        }
                        else if (userRole == "Worker")
                        {
                            <a href="~/Worker/Search" class="hover:text-white transition-colors">ابحث عن العمّال</a>
                        }
                        else if (userRole == "Admin")
                        {
                            <a href="~/Admin/ManageWorkers" class="hover:text-white transition-colors">ابحث عن العمّال</a>
                        }
                        else
                        {
                            <a href="~/Auth/Login" class="hover:text-white transition-colors">ابحث عن العمّال</a>
                        }
                    </li>
                    <li><a href="~/Auth/Register" class="hover:text-white transition-colors">سجّل الآن</a></li>
                    <li><a href="#how-it-works" class="hover:text-white transition-colors">كيف يعمل</a></li>
                </ul>
            </div>

            <div>
                <h4 class="text-white font-semibold mb-4">للعمّال</h4>
                <ul class="space-y-2">
                    <li><a href="~/Auth/Register" class="hover:text-white transition-colors">التسجيل كعامل</a></li>
                    <li><a href="~/Auth/Login" class="hover:text-white transition-colors">تسجيل الدخول</a></li>
                    <li><a href="#features" class="hover:text-white transition-colors">المميزات</a></li>
                </ul>
            </div>

            <div>
                <h4 class="text-white font-semibold mb-4">تابعنا</h4>
                <div class="flex space-x-4 space-x-reverse">
                    <a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-teal-600 transition-colors">
                        <i class="ri-facebook-fill text-xl"></i>
                    </a>
                    <a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-teal-600 transition-colors">
                        <i class="ri-twitter-fill text-xl"></i>
                    </a>
                    <a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-teal-600 transition-colors">
                        <i class="ri-instagram-fill text-xl"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-center md:text-right">
            <p class="text-gray-400 text-sm">© 2024 HandyHub. جميع الحقوق محفوظة.</p>
            <span class="text-gray-400 text-sm mt-4 md:mt-0">منصة HandyHub لخدمات العمّال المهرة</span>
        </div>
    </div>
</footer>