@model HandyHub.Models.ViewModels.LoginModel
@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تسجيل الدخول | HandyHub</title>
    <link href="~/images/logo.png" rel="icon" type="image/png" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Tajawal", sans-serif;
        }

        .welcome-animate {
            animation: fadeInDown 1s ease-out;
        }

        @@keyframes fadeInDown {
            from {
                transform: translateY(-40px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .form-animate {
            animation: fadeInUp 1s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                transform: translateY(40px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-50 to-teal-100 flex items-center justify-center py-12 px-4">

    <div class="max-w-md w-full">

        <!-- قسم الترحيب -->
        <div class="text-center mb-8 welcome-animate">
            <img src="https://cdn-icons-png.flaticon.com/512/3595/3595587.png"
                 width="70"
                 alt="HandyHub"
                 class="mx-auto mb-4" />
            <h1 class="text-3xl font-bold text-teal-600 mb-2">مرحبًا بك في HandyHub!</h1>
            <p class="text-gray-600">منصة تجمع العملاء والعاملين وأصحاب الأعمال في مكان واحد</p>
        </div>

        <!-- كارد تسجيل الدخول -->
        <div class="bg-white rounded-2xl shadow-xl p-8 form-animate">

            <h2 class="text-2xl font-bold text-gray-900 text-center mb-6">
                تسجيل الدخول 👋
            </h2>
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <form method="post" autocomplete="off" class="space-y-5 text-right">

                <!-- البريد الإلكتروني -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        البريد الإلكتروني
                    </label>
                    <input asp-for="Email"
                           type="email"
                           
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm transition duration-200"
                           placeholder="example@email.com" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- كلمة المرور -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        كلمة المرور
                    </label>
                    <input asp-for="Password"
                           type="password"
                           
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm transition duration-200"
                           placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- ✅ نوع الحساب - Radio Buttons بسيطة -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">
                        نوع الحساب
                    </label>
                    <div class="flex gap-6">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" asp-for="Role" value="Client" 
                                   class="w-4 h-4 text-teal-600" />
                            <span class="text-sm text-gray-700">👤 عميل</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" asp-for="Role" value="Worker"
                                   class="w-4 h-4 text-teal-600" />
                            <span class="text-sm text-gray-700">🔧 عامل</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" asp-for="Role" value="Admin"
                                   class="w-4 h-4 text-teal-600" />
                            <span class="text-sm text-gray-700">⚙️ مدير</span>
                        </label>
                    </div>
                    <span asp-validation-for="Role" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- زر تسجيل الدخول -->
                <button type="submit"
                        class="w-full py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-semibold transition duration-300 shadow-lg hover:shadow-xl">
                    تسجيل الدخول
                </button>
            </form>

            <!-- رابط التسجيل -->
            <div class="mt-6 text-center">
                <span class="text-sm text-gray-600">ليس لديك حساب؟</span>
                <a href="/Auth/Register"
                   class="inline-block mr-2 px-4 py-2 bg-gradient-to-r from-teal-400 to-teal-600 text-white rounded-lg text-sm font-semibold hover:shadow-lg transition duration-300">
                    إنشاء حساب جديد
                </a>
            </div>
        </div>

    </div>

    <!-- سكربتات Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>