@model HandyHub.Models.ViewModels.LoginModel
@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<style>
    body {
        background: linear-gradient(135deg, #f8fafc 40%, #6EE7B7 100%);
        min-height: 100vh;
    }

    .welcome-animate {
        animation: fadeInDown 1.2s;
    }
    keyframes fadeInDown {
        from

    {
        transform: translateY(-60px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .formbox-animate {
        animation: fadeInUp 1.2s;
    }
    keyframes fadeInUp {
        from

    {
        transform: translateY(60px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .login-card {
        border-radius: 20px;
        box-shadow: 0 8px 32px #38b2ac22;
        background: #fff;
        padding: 32px 28px;
    }

    .btn-register {
        background: linear-gradient(90deg,#47e7b7 0%, #38b2ac 100%);
        color: #fff;
        font-weight: bold;
        transition: box-shadow .3s;
        box-shadow: 0 2px 10px #38b2ac22;
    }

        .btn-register:hover {
            box-shadow: 0 4px 20px #38b2ac33;
            color: #fff;
        }
</style>
<div class="container" dir="rtl">
    <div class="row justify-content-center mt-5">
        <div class="col-md-7 col-lg-6">
            <div class="text-center mb-4 welcome-animate">
                <img src="https://cdn-icons-png.flaticon.com/512/3595/3595587.png" width="70" alt="HandyHub" class="mb-2" />
                <h1 style="font-weight:bold; color:#19B38C;">مرحبًا بك في HandyHub!</h1>
                <p class="lead mt-2">منصة تجمع العملاء والعاملين وأصحاب الأعمال في مكان واحد بطريقة سلسة وآمنة.</p>
            </div>
            <div class="login-card formbox-animate">
                <form method="post" autocomplete="off">
                    <h3 class="mb-3 text-center" style="color:#19B38C;">تسجيل الدخول</h3>

                    <div class="form-group mb-4">
                        <label style="font-weight:400;">البريد الإلكتروني</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="مثال: client@gmail.com" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label style="font-weight:400;">كلمة المرور</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="ادخل كلمة المرور" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label style="font-weight:400;">نوع الحساب</label>
                        <select asp-for="Role" class="form-control" required>
                            <option value="">اختر نوع الحساب</option>
                            <option value="Client">عميل</option>
                            <option value="Worker">عامل</option>
                            <option value="Admin">مدير</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-2" style="font-weight:500;">تسجيل الدخول</button>
                </form>
                <div class="text-center mt-3">
                    <span>ليس لديك حساب؟</span>
                    <a href="/Auth/Register" class="btn btn-register ms-2">إنشاء حساب جديد</a>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
