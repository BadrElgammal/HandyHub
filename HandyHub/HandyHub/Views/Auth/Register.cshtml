@model HandyHub.Models.ViewModels.RegisterModel
@{
    ViewBag.Title = "إنشاء حساب جديد";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>إنشاء حساب | HandyHub</title>
    <link href="~/images/logo.png" rel="icon" type="image/png" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Tajawal", sans-serif;
        }
    </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-gray-50 to-teal-100 flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8">

        <!-- العنوان -->
        <div class="text-center mb-8">
            <img src="https://cdn-icons-png.flaticon.com/512/3595/3595587.png"
                 width="60"
                 alt="HandyHub"
                 class="mx-auto mb-4" />
            <h1 class="text-3xl font-bold text-gray-900 mb-2">إنشاء حساب جديد</h1>
            <p class="text-gray-600">انضم إلى منصة HandyHub اليوم 👋</p>
        </div>

        <!-- نموذج التسجيل -->
        <form method="post" autocomplete="off" class="space-y-5 text-right">

            <!-- اختيار نوع المستخدم -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">نوع الحساب</label>
                <div class="grid grid-cols-2 gap-4">
                    <label id="clientBtn"
                           class="p-4 border-2 rounded-lg font-medium text-center cursor-pointer transition
                                  border-teal-600 bg-teal-50 text-teal-600">
                        <input type="radio" asp-for="Role" value="Client" class="hidden" checked />
                        <i class="ri-user-line text-2xl mb-2 block"></i>
                        <div>عميل</div>
                    </label>

                    <label id="workerBtn"
                           class="p-4 border-2 rounded-lg font-medium text-center cursor-pointer transition
                                  border-gray-200 hover:border-gray-300 text-gray-600">
                        <input type="radio" asp-for="Role" value="Worker" class="hidden" />
                        <i class="ri-tools-line text-2xl mb-2 block"></i>
                        <div>عامل</div>
                    </label>
                </div>
                <span asp-validation-for="Role" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- الاسم الكامل -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الاسم الكامل</label>
                <input asp-for="Name"
                       type="text"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                       placeholder="أدخل اسمك الكامل" />
                <span asp-validation-for="Name" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- البريد الإلكتروني -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">البريد الإلكتروني</label>
                <input asp-for="Email"
                       type="email"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                       placeholder="example@email.com" />
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- رقم الهاتف -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">رقم الهاتف</label>
                <input asp-for="Phone"
                       type="tel"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                       placeholder="0 100 123 4567" />
                <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- المدينة -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">المدينة</label>
                <input asp-for="City"
                       type="text"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                       placeholder="القاهرة" />
                <span asp-validation-for="City" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- كلمة المرور -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">كلمة المرور</label>
                <input asp-for="Password"
                       type="password"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                       placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- تأكيد كلمة المرور -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">تأكيد كلمة المرور</label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent text-sm"
                       placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- زر إنشاء الحساب -->
            <button type="submit"
                    class="w-full py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-semibold transition duration-300 shadow-lg hover:shadow-xl">
                إنشاء الحساب
            </button>
        </form>

        <!-- لديك حساب؟ -->
        <div class="mt-6 text-center">
            <span class="text-sm text-gray-600">لديك حساب بالفعل؟</span>
            <a href="/Auth/Login"
               class="text-teal-600 hover:text-teal-700 font-medium mr-1">
                تسجيل الدخول
            </a>
        </div>
    </div>

    <!-- سكربت تبديل نوع الحساب -->
    <script>
        const clientBtn = document.getElementById('clientBtn');
        const workerBtn = document.getElementById('workerBtn');

        clientBtn.addEventListener('click', () => {
            clientBtn.classList.add('border-teal-600', 'bg-teal-50', 'text-teal-600');
            clientBtn.classList.remove('border-gray-200', 'text-gray-600');
            workerBtn.classList.remove('border-teal-600', 'bg-teal-50', 'text-teal-600');
            workerBtn.classList.add('border-gray-200', 'text-gray-600');
        });

        workerBtn.addEventListener('click', () => {
            workerBtn.classList.add('border-teal-600', 'bg-teal-50', 'text-teal-600');
            workerBtn.classList.remove('border-gray-200', 'text-gray-600');
            clientBtn.classList.remove('border-teal-600', 'bg-teal-50', 'text-teal-600');
            clientBtn.classList.add('border-gray-200', 'text-gray-600');
        });
    </script>

    <!-- سكربتات Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>