@model HandyHub.Models.ViewModels.RegisterModel
@{
    ViewBag.Title = "إنشاء حساب جديد";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<style>
    body {
        background: linear-gradient(135deg, #f8fafc 40%, #6EE7B7 100%);
        min-height: 100vh;
    }

    .register-card {
        border-radius: 20px;
        box-shadow: 0 8px 32px #38b2ac22;
        background: #fff;
        padding: 40px 30px;
    }
</style>
<div class="container" dir="rtl">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="register-card">
                <form method="post" novalidate autocomplete="off">
                    <h3 class="mb-4 text-center" style="color:#19B38C; font-weight:600;">إنشاء حساب جديد</h3>
                    <div class="mb-3">
                        <input asp-for="Name" type="text" class="form-control" placeholder="الاسم" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="البريد الإلكتروني" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Phone" type="text" class="form-control" placeholder="رقم الهاتف" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="City" type="text" class="form-control" placeholder="المدينة" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="كلمة المرور" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="تأكيد كلمة المرور" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <select asp-for="Role" class="form-control">
                            <option value="">اختر نوع الحساب</option>
                            <option value="Client">عميل</option>
                            <option value="Worker">عامل</option>
                            <option value="Admin">مدير</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success w-100" style="font-weight:500;">إنشاء حساب</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
