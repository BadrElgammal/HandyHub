@{
    ViewData["Title"] = "الرئيسية";
}

<!-- ✅ Hero Section -->
<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-teal-50 via-white to-blue-50 overflow-hidden">
    <div class="absolute inset-0 bg-[url('https://public.readdy.ai/ai/img_res/ff8fc6a6176f5f66a90f607af44a0185.jpg')] bg-cover bg-center opacity-10"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Text -->
            <div class="w-full">
                <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
                    ابحث عن <span class="text-teal-600">العمّال المهرة</span><br>في منطقتك
                </h1>
                <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                    تواصل مع أفضل المهنيين الموثوقين لكل احتياجاتك الخدمية. ابحث حسب الفئة والموقع والتقييم للعثور على العامل المناسب لمشروعك.
                </p>

                <!-- Search Box -->
                <div class="bg-white rounded-2xl shadow-xl p-6 mb-8">
                    <div class="space-y-4">
                        <div class="relative">
                            <i class="ri-search-line absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 text-xl"></i>
                            <input type="text"
                                   placeholder="ما نوع الخدمة التي تحتاجها؟"
                                   class="w-full pr-12 pl-4 py-4 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 text-base" />
                        </div>
                        <div class="relative">
                            <i class="ri-map-pin-line absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 text-xl"></i>
                            <input type="text"
                                   placeholder="أدخل مدينتك أو منطقتك"
                                   class="w-full pr-12 pl-4 py-4 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 text-base" />
                        </div>
                        <button class="w-full bg-teal-600 text-white py-4 rounded-xl hover:bg-teal-700 font-semibold text-lg transition-colors">
                            ابحث عن العمّال
                        </button>
                    </div>
                </div>

                <!-- Info icons -->
                <div class="flex items-center space-x-8 space-x-reverse">
                    <div class="flex items-center space-x-2 space-x-reverse">
                        <i class="ri-shield-check-fill text-green-500 text-2xl"></i>
                        <span class="text-gray-700 font-medium">عمّال موثوقون</span>
                    </div>
                    <div class="flex items-center space-x-2 space-x-reverse">
                        <i class="ri-star-fill text-yellow-400 text-2xl"></i>
                        <span class="text-gray-700 font-medium">خدمات مُقَيّمة</span>
                    </div>
                </div>
            </div>

            <!-- Image -->
            <div class="hidden lg:block">
                <img alt="Professional skilled workers" class="rounded-2xl shadow-2xl object-cover w-full h-[600px]" src="https://readdy.ai/api/search-image?query=Professional%20diverse%20skilled%20workers%20team%20portrait%20with%20various%20tools%20and%20equipment%2C%20friendly%20smiling%20craftspeople%20and%20service%20professionals%2C%20modern%20clean%20studio%20photography%20with%20simple%20white%20background%2C%20bright%20natural%20lighting%2C%20high%20quality%20professional%20composition%2C%20workers%20wearing%20professional%20attire%20and%20safety%20gear%2C%20contemporary%20aesthetic&amp;width=800&amp;height=900&amp;seq=hero-img-001&amp;orientation=portrait">
            </div>
        </div>
    </div>
</section>

